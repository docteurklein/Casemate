<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="knp.admin_menu.menu.class">Knp\Bundle\AdminMenuBundle\Services\AdminMenu</parameter>
    </parameters>

    <services>
        <service id="knp.admin_menu.menu" class="%knp.admin_menu.menu.class%" scope="request">
            <tag name="menu" alias="main" />
            <argument type="service" id="request" />
            <argument type="service" id="router" />
			<argument type="service" id="knp.admin_menu.config" />
        </service>
    </services>

</container>
